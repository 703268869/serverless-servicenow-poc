{
  "name": "servicenow-poc-app-sync-svc",
  "version": "0.4.18",
  "description": "A servicenow-poc API framework",
  "engines": {
    "node": "14",
    "npm": "6"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=local serverless offline start --stage local",
    "deploy:poc": "cross-env NODE_ENV=poc serverless deploy --stage poc --verbose",
    "deploy:dev": "cross-env NODE_ENV=dev serverless deploy --stage dev --verbose",
    "deploy:uat": "cross-env NODE_ENV=uat serverless deploy --stage uat --verbose",
    "deploy:prod": "cross-env NODE_ENV=production serverless deploy --stage prod --verbose",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "prettify": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,jsx,ts,tsx,json,yml,yaml,md}\"",
    "prettify:fix": "prettier -c --ignore-path .gitignore \"**/*.{css,html,js,jsx,ts,tsx,json,yml,yaml,md}\" --write",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --colors --coverage",
    "branch:check": "(git-branch-is release/uat && npm --no-git-tag-version version minor && git add package.json package-lock.json) || (git-branch-is release/dev && npm --no-git-tag-version version patch && git add package.json package-lock.json) || echo 'non CI/CD branch'"
  },
  "author": "Manish Kumar",
  "license": "MIT",
  "devDependencies": {
    "@serverless/typescript": "^2.30.3",
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "git-branch-is": "^4.0.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "serverless-esbuild": "^1.9.0",
    "serverless-offline": "^6.8.0",
    "serverless-plugin-split-stacks": "^1.11.0",
    "serverless-prune-plugin": "^1.4.4",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@dazn/lambda-powertools-logger": "^1.28.1",
    "@dazn/lambda-powertools-middleware-correlation-ids": "^1.28.1",
    "@dazn/lambda-powertools-middleware-log-timeout": "^1.28.1",
    "@dazn/lambda-powertools-middleware-sample-logging": "^1.28.1",
    "@dazn/lambda-powertools-sqs-client": "^1.28.1",
    "@fast-csv/parse": "^4.3.6",
    "@middy/core": "^1.5.2",
    "@middy/do-not-wait-for-empty-event-loop": "^1.5.2",
    "@middy/http-cors": "^1.5.2",
    "@middy/http-error-handler": "^1.5.2",
    "@middy/http-event-normalizer": "^1.5.2",
    "@middy/http-json-body-parser": "^1.5.2",
    "@middy/http-multipart-body-parser": "^1.5.2",
    "@middy/http-security-headers": "^1.5.2",
    "@middy/http-urlencode-path-parser": "^1.5.2",
    "@types/lodash": "^4.14.168",
    "@types/serverless": "^1.78.22",
    "amazon-dax-client": "^1.2.5",
    "athena-express": "^6.0.4",
    "axios": "^0.21.1",
    "csv-stringify": "^5.6.2",
    "csvtojson": "^2.0.10",
    "dayjs": "^1.10.4",
    "joi": "^17.4.0",
    "lodash": "^4.17.21",
    "p-map": "^4.0.0",
    "sequelize": "^6.6.5",
    "sequelize-noupdate-attributes": "^1.0.0",
    "sequelize-typescript": "^2.1.0",
    "stream-chain": "^2.2.4",
    "stream-json": "^1.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run branch:check",
      "post-commit": "git-branch-is master && git tag v$(npx -c 'echo \"$npm_package_version\"') && git add package.json package-lock.json"
    }
  },
  "lint-staged": {
    "*.{js,jsx,vue,ts,tsx}": [
      "npm run lint:fix",
      "npm run prettify:fix",
      "git add"
    ]
  }
}
